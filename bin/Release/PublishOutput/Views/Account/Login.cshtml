@model  UserEntity

<div class="card login">
    <div class="card-header text-center">
        <h3>登录</h3>
    </div>
    <div class="card-body">

        @{Html.RenderPartial("_MessagePartial");}

      
        <form action="@Url.Action("Login")" method="post">
            <div class="form-group row">
                <label for="user" class="col-md-1 col-form-label">帐号</label>
                <input class="form-control col-md-5" id="account" name="account"  placeholder="用户名" value="@Model.LoginName" data-required="帐号不能为空" />
                <div class="w-100"></div>
                <div class=" col-1"></div>
                <div class="col-5 invalid-feedback"></div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-md-1 col-form-label">密码</label>
                <input type="password" class="form-control  col-md-5" id="password" name="password" placeholder="密码" data-required="密码不能为空" />
                <div class="w-100"></div>
                <div class=" col-1"></div>
                <div class="col-5 invalid-feedback"></div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary" id="btnSubmit">登录</button>
                <button type="button" class="btn btn-outline-primary" id="signup">注册</button>
            </div>
        </form>
    </div>

</div>


@section scripts {
    <script type="text/javascript" >
        $(function () {
            $("#signup").on("click", function () {
                window.location.href = "@Url.Action("Index")";
            });


           
                $("#btnSubmit").on("click", function () {
                    return $.validate();
                });
            
        });
    </script>
}