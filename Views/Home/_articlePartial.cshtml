@model ArticleEntity


<div class="card " data-id="@Model.Id">
    <div class="card-body home-cardbody">
        <div class="card-title media">
            <img class="d-flex mr-2 img-circle rounded-circle" src="@Url.Content("~/UserImage/" + Model.UpdateUser.UserImage)" alt="囧人囧事">
            <div class="media-body align-self-center">
                <a href="@Url.Action("GetUser", "User", new { id = Model.UpdateBy, page = 1 })">@Model.UpdateUser.NickName </ a >
            </div>
        </div>
        <a href="@Url.Action("Detail", "Home", new { id = Model.Id })" class="normalA">
            <p class="card-text">@Html.Raw(Model.Content)</p>
            @{Html.RenderPartial("_attachment", Model); }
        </a>
    </div>

    <ul class="nav homenav">
        <li class="nav-item">
            <a class="nav-link articleGood" data-value="1" href="#">
                <span class="oi icon" data-glyph="thumb-up" title="thumb-up" aria-hidden="true"></span>
                <span>@Model.GoodNum </span>
            </a>
        </li>
        <li class="nav-item ">
            <a class="nav-link articleBad" data-value="-1" href="#">
                <span class="oi icon" data-glyph="thumb-down" title="thumb-down" aria-hidden="true"></span>
                <span>@Model.BadNum</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link articleComment" href="#">
                <span class="oi icon" data-glyph="pencil" title="pencil" aria-hidden="true"></span>
                <span>@Model.Comments.Count()</span>
            </a>
        </li>

    </ul>
</div>