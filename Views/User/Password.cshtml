@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model UserEntity


<div class="card login">
    <div class="card-body">
        @{Html.RenderPartial("_MessagePartial");}


        <form action="@Url.Action("ChangePassword")" method="post">
            <div class="form-group row">
                <label for="oldPassword" class="col-2 col-form-label">旧密码</label>
                <input type="password" class="form-control col-5" id="oldPassword" name="oldPassword" placeholder="旧密码" value="" data-required="密码不能为空">
                <div class="w-100"></div>
                <div class=" col-2"></div>
                <div class="col-5 invalid-feedback"></div>
            </div>
            <div class="form-group row">
                <label for="newPassword" class="col-2 col-form-label">新密码</label>
                <input type="password" class="form-control col-5" id="newPassword" name="newPassword" placeholder="新密码" value="" data-required="密码不能为空" />
                <div class="w-100"></div>
                <div class=" col-2"></div>
                <div class="col-5 invalid-feedback"></div>
            </div>
            <div class="form-group row">
                <label for="repeatPassword" class="col-2 col-form-label">确认密码</label>
                <input type="password" class="form-control col-5" id="repeatPassword" name="repeatPassword" placeholder="确认密码" value="" data-required="密码不能为空" data-equals-id="newPassword" data-notequals="密码不一致" />
                <div class="w-100"></div>
                <div class=" col-2"></div>
                <div class="col-5 invalid-feedback"></div>
            </div>

            <div class="form-group row">

                <button type="submit" class="btn btn-primary" id="btnSubmit">修改</button>

            </div>
        </form>
    </div>

</div>



@section scripts {
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").on("click", function () {
                return $.validate();
            });
        });
    </script>
}

